
.shop_content {
  margin-top: 25rpx;
  width: 100%;
  box-sizing: border-box;
  background: #fff;
}

.shop_content:after {
  clear: both;
  content: '';
  display: table;
}

.shop_content_header {
  background: #fff;
  padding: 20rpx 20rpx;
  font-size: 26rpx;
  color: #666;
  border-bottom: 1rpx solid #ddd;
}

.shop_content_header .title {
  border-left: 5rpx solid #ff3364;
  padding-left: 8rpx;
  float: left;
}

.shop_content_header .more {
  float: right;
  display: flex;
  flex-direction: row;
  align-items: center;
  text-align: right;
  font-size: 26rpx;
}
.icon_right{
  width: 15rpx;
  height: 20rpx;
  padding-left: 8rpx;
}
.shop_list {
  width: 50%;
  float: left;
}

.list_content {
  width: 100%;
  box-sizing: border-box;
}

.shop_list:nth-child(odd) .list_content {
  padding: 20rpx 20rpx 20rpx 10rpx;
}

.shop_list:nth-child(even) .list_content {
  padding: 20rpx 10rpx 20rpx 20rpx;
}

.preview_tsl {
  width: 100%;
  height: 270rpx;
}

.preview_tsl image {
  width: 100%;
  max-height: 100%;
}

.preview_tsl .image {
  width: 100%;
  height: 270rpx;
  background-size: cover;
}

.preview_title {
  padding-top: 20rpx;
  font-size: 25rpx;
  height: 50rpx;
  color: #666;
}

.between_view {
  margin-top: 5rpx;
  font-size: 20rpx;
  color: #ccc
}

.now_price {
  color: #ff3364;
  font-size: 28rpx;
  float: left;
}

.old_price {
  color: #ccc;
  text-decoration: line-through;
  font-size: 24rpx;
  float: right;
}
