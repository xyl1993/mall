/* pages/mine/mine.wxss */
.top_bac{
  background: #ff3364;
  height: 300rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
}
.circle{
  border: 5rpx solid #FE8DAE;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-top: 60rpx
}
.userinfo_nickname{
  margin-top: 40rpx;
  color: #fff;
  font-size: 30rpx;
}
.header_item{
  background: #fff;
  padding: 20rpx 20rpx;
  font-size: 26rpx;
  color: #666;
  border-bottom: 1rpx solid #ddd;
}
.header_item .title{
  float: left;
  height: 32rpx;
  line-height: 32rpx;
}
.header_item .more {
  float: right;
  display: flex;
  flex-direction: row;
  align-items: center;
  text-align: right;
  font-size: 20rpx;
  height: 32rpx;
}
.icon_right{
  width: 15rpx;
  height: 20rpx;
  padding-left: 8rpx;
}