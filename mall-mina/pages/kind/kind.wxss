/**index.wxss**/
@import '../../resources/css/search.wxss';
@import '../../resources/css/loadMore.wxss';
.content {
  display: flex;
  flex-direction: row;
  flex: 1;
}

.menu_content {
  height: 100%;
  width: 200rpx;
}

.menu_list {
  padding: 20rpx 0 20rpx 15rpx;
  width: 100%;
  box-sizing: border-box;
}

.menu_list view {
  padding-left: 20rpx;
}
.menu_list.active{
  background: #fff;
}
.menu_list.active view {
  border-left: 5rpx solid #F1EDEC;
  color: #666;
}
.product_content{
  height: 100%;
  background: #fff;
  overflow: auto;
  flex: 1;
}
.shop_list{
  width: 50%;
  float: left;
}
.list_content {
  width: 100%;
  box-sizing: border-box;
}

.shop_list:nth-child(odd) .list_content {
  padding: 20rpx 10rpx 20rpx 20rpx;
}

.shop_list:nth-child(even) .list_content {
  padding: 20rpx 20rpx 20rpx 10rpx;
}
.preview_tsl {
  width: 100%;
  height: 200rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.preview_tsl image {
  width: 100%;
  max-height: 100%;
}
.preview_title{
  padding-top: 20rpx;
  font-size: 24rpx;
}
