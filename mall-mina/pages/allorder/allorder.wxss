/* pages/allorder/allorder.wxss */
@import '../../resources/css/loadMore.wxss';
.header{
  position: fixed;
  top: 0;
  width: 100%;
  height: 100rpx;
  overflow: hidden;
  background: #fff;
}
.header-list{
  width: 100%;
  display: flex;
  align-items: center;
}
.order-title{
  padding: 20rpx 0;
  font-size: 30rpx;
  border-bottom: 1rpx solid #ddd;
  padding-left: 25rpx;
}
.order-title text{
  float: right;
  padding-right:25rpx;
}
.header-item{
  display: flex;
  flex:1;
  align-items: center;
  justify-content: center;
  height: 96rpx;
  
}
.header-item.active{
  border-bottom: 6rpx solid #FFCC00;
}
.cointer{
  padding-top: 120rpx;
}
.order-list{
  display: flex;
  width: 100%;
  background: #fff;
  flex-direction: column;
  color: #333;
  margin-bottom: 30rpx;
}
.option-list{
  height: 100rpx;
  border-top: 1rpx solid #ddd;
  padding-right: 25rpx;
}
.btn{
  height: 60rpx;
  line-height: 60rpx;
  float: right;
  margin-top: 20rpx;
  border-radius: 8rpx;
  padding: 0 20rpx;
}
.btn:last-of-type{
  margin-right: 20rpx;
}
.error{
  background: #FFCC00;
  color: #fff;
  border: 1rpx solid #FFCC00;
}
.default{
  border: 1rpx solid #333;
}




.view-list {
  background: #fff;
  border-top: 1rpx solid #ddd;
  display: flex;
  width: 100%;
}
.view-list:first-of-type{
  border-top: none;
}
.list-cointer {
  flex: 1;
}
.list-main{
  flex: 1;
  display: flex;
  align-items: center;
  padding: 25rpx;
  flex-wrap: wrap
}
.img-cointer {
  height: 130rpx;
  width: 130rpx;
  padding: 10rpx 0;
  padding-right: 15rpx;
}

.product-view {
  flex: 1;
  display: flex;
  height: 100%;
  flex-direction: column;
  justify-content: space-between;
  padding-left: 25rpx;
  padding-right: 25rpx;
}
.product-view .title{
  font-size: 26rpx;
  color: #333;
}
.price-view{
  font-size: 24rpx;
  display: flex;
  justify-content: space-between;
}
.product-view .price{
  color: #666;
}



.price-list{
  padding: 15rpx 25rpx;
  text-align: right;
  border-top: 1rpx solid #ddd;
}