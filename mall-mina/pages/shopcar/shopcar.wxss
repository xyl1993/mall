/* pages/shopcar/shopcar.wxss */

.cointer {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

.header {
  padding: 0 25rpx;
  height: 90rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  border-bottom: 1rpx solid #ddd;
}

.radio-all {
  height: 90rpx;
  display: flex;
  align-items: center;
}

radio {
}

.editBtn {
}

.bottom {
  height: 90rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
  border-top: 1rpx solid #ddd;
}

.sure-brn {
  height: 90rpx;
  width: 200rpx;
  background: #ff3364;
  text-align: center;
  color: #fff;
  line-height: 90rpx;
}

.bottom-left {
  flex: 1;
  height: 100%;
  display: flex;
  flex-direction: column;
  padding-right: 20rpx;
  justify-content: space-around;
}

.sum {
  text-align: right;
  font-size: 28rpx;
  color: #333;
}

.other {
  text-align: right;
  font-size: 24rpx;
  color: #dbdbdb;
}

.center {
  flex: 1;
  width: 100%;
}

.view-list {
  background: #fff;
  border-top: 1rpx solid #ddd;
  display: flex;
  width: 100%;
}
.view-list:first-of-type{
  border-top: none;
}
.list-cointer {
  padding: 25rpx 0 25rpx 20rpx;
  flex: 1;
}
.list-main{
  flex: 1;
  height: 120rpx;
  display: flex;
  align-items: center;
}
.img-cointer {
  height: 100%;
  width: 140rpx;
}

.img-cointer image {
  width: 100%;
  height: 100%;
}

.product-view {
  flex: 1;
  display: flex;
  height: 100%;
  flex-direction: column;
  justify-content: space-between;
  padding-left: 25rpx;
  padding-right: 25rpx;
}
.product-view .title{
  font-size: 26rpx;
  color: #333;
}
.price-view{
  font-size: 24rpx;
  display: flex;
  justify-content: space-between;
}
.product-view .price{
  color: #ff3364;
}
.delete-view{
  background: #ff3364;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100rpx;
  color: #fff;
}
