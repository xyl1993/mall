<wxs module="filters" src="../../utils/filter.wxs"></wxs>
<view class='mainer'>
  <view class='cointer'>
    <view class='address' wx:if="{{address.length>0}}" data-id="{{address[0].id}}" bindtap='tabAddress'>
      <view class='collect_name clear'>
        <view>收货人: {{address[0].collect_name}}</view>
        <view>{{address[0].phone}}</view>
      </view>
      <view>收货地址: {{address[0].address}}</view>
    </view>
    <view class='address' wx:else bindtap='addAddress'>
      <view class='ad-address'>
        新增收货地址
      </view>
    </view>
    <view class='product-list'>
      <view class='view-list' wx:for="{{productList}}" wx:key="idx" wx:for-item="item" wx:for-index="idx" data-id="{{item.product_id}}" bindtap='toDetail'>
        <view class='list-cointer'>
          <view class='list-main'>
            <view class='img-cointer'>
              <image src='{{fileIp+item.cover}}'></image>
            </view>
            <view class='product-view'>
              <view class='title'>{{item.title}}</view>
              <view>{{item.name}}</view>
              <view class='price-view'>
                <text class='price'>￥{{item.current_price}}</text>
                <text>X {{item.number}}</text>
              </view>
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>
  <view class='bottom'>
    <view class='bottom-left'>
      <view class='sum'>合计 ￥{{ filters.toFix(allPrice) }}</view>
      <view class='other'>含运费</view>
    </view>
    <form bindsubmit="share"  report-submit='true'>
      <button class='sure-brn' form-type="submit" open-type="share">转发给商家</button>
    </form>
  </view>
</view>